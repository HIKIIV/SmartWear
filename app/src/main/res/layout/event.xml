<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bluetoothsample.view.event"
    android:background="@drawable/event">

    <Button
        android:id="@+id/event_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="152dp"
        android:layout_marginTop="108dp"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/event_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="108dp"
        android:alpha="0"
        app:layout_constraintStart_toEndOf="@+id/event_location"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/event_back"
        android:layout_width="39dp"
        android:layout_height="38dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="48dp"
        android:alpha="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/event_record"
        android:layout_width="45dp"
        android:layout_height="41dp"
        android:layout_marginTop="247dp"
        android:layout_marginEnd="10dp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/event_record_sig"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="266dp"
        android:background="#FF0000"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/event_record" />
</androidx.constraintlayout.widget.ConstraintLayout>